# ===================================================================
# BINANCE TRADING BOT - ENHANCED CONFIGURATION
# ===================================================================

# ===================================================================
# API CREDENTIALS (필수)
# ===================================================================
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_TESTNET=false

# ===================================================================
# TELEGRAM NOTIFICATIONS (선택사항)
# ===================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ===================================================================
# TRADING PARAMETERS
# ===================================================================
# 레버리지 (1-125)
LEVERAGE=10

# 거래할 심볼 개수 (1-20, 권장: 5-10)
SYMBOL_COUNT=5

# 포지션 크기 (계좌 잔고의 %, 0.1-10)
POSITION_SIZE_PERCENT=2.0

# ===================================================================
# RISK MANAGEMENT
# ===================================================================
# 수익 실현 비율 (%, 0.5-20)
TAKE_PROFIT_PERCENT=5.0

# 트레일링 스톱 ATR 배수 (0.5-10)
STOP_TRAILING_ATR_MULTIPLIER=2.0

# 트레일링 스톱 최소 비율 (%, 0.1-5)
STOP_TRAILING_MIN_PERCENT=1.0

# 트레일링 스톱 최대 비율 (%, 2-25)
STOP_TRAILING_MAX_PERCENT=10.0

# 포지션 쿨다운 시간 (초, 60-3600)
POSITION_COOLDOWN_SECONDS=300

# 손실 시 쿨다운 배수 (1.0-5.0)
COOLDOWN_MULTIPLIER=1.5

# ===================================================================
# TECHNICAL INDICATORS
# ===================================================================

# ADX (Average Directional Index)
ADX_LENGTH=24
ADX_SMOOTHING=24

# Vortex Indicator
VI_LENGTH=48

# Money Flow Index
MFI_LENGTH=24

# RSI (Relative Strength Index)
RSI_LENGTH=24
RSI_SMOOTHING=24

# CCI (Commodity Channel Index)
CCI_LENGTH=24
CCI_SMOOTHING=24

# Parabolic SAR
PSAR_START=0.005
PSAR_INCREMENT=0.005
PSAR_MAXIMUM=0.05

# SuperTrend
SUPERTREND_ATR_LENGTH=10
SUPERTREND_MULTIPLIER=3.0

# Hurst Exponent (추세/횡보 판별)
HURST_WINDOW=24
HURST_RS_LAG=24
HURST_SMOOTHING=24

# ATR (Average True Range)
ATR_LENGTH=24

# Volume Weighted Moving Averages
VWMA_SHORT=6
VWMA_MID=12
VWMA_LONG=24

# ===================================================================
# OSCILLATOR SETTINGS
# ===================================================================
# 오실레이터 가중치 (합계가 1.0이 되도록 자동 정규화)
WEIGHT_RSI=0.4
WEIGHT_CCI=0.3
WEIGHT_MFI=0.3

# 오실레이터 임계값
OSCILLATOR_LONG_THRESHOLD=-1.0
OSCILLATOR_SHORT_THRESHOLD=1.0

# ===================================================================
# TREND DETECTION
# ===================================================================
# 추세 판별용 캔들 개수 (3-20)
TREND_DETECTION_CANDLES=8

# ===================================================================
# SYSTEM SETTINGS
# ===================================================================
# 로그 레벨 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# 파일 로깅 활성화
LOG_TO_FILE=true

# 최대 워커 프로세스 수 (1-50)
MAX_WORKERS=20

# REST API 호출 간격 (초, 1-10, 권장: 3)
REST_API_INTERVAL=3

# WebSocket 재연결 지연 (초, 1-30)
WEBSOCKET_RECONNECT_DELAY=5

# 캔들 확인 지연 (초, 5-60)
CANDLE_CONFIRMATION_DELAY=10

# 상태 표시 간격 (초, 10-300)
STATUS_DISPLAY_INTERVAL=30

# ===================================================================
# ADVANCED SETTINGS (기본값 사용 권장)
# ===================================================================

# Volume thresholds for symbol filtering
# MIN_VOLUME_THRESHOLD=5000000

# Data quality settings
# MAX_ZERO_VOLUME_CANDLES=3
# MAX_PRICE_CHANGE_PERCENT=20

# Memory and performance
# MAX_CANDLES_PER_SYMBOL=500
# INDICATOR_CALCULATION_INTERVAL=5

# Health monitoring
# HEALTH_CHECK_INTERVAL=300
# STALE_DATA_THRESHOLD=1800

# ===================================================================
# NOTES
# ===================================================================
# 1. API 키는 Futures 거래 권한이 있어야 함
# 2. 테스트넷에서 먼저 테스트 권장
# 3. 레버리지는 리스크에 따라 조정
# 4. 심볼 개수가 많을수록 더 많은 리소스 필요
# 5. 지표 설정값은 백테스팅을 통해 최적화 권장
# 6. 시작하기 전 모든 설정값 검토 필수